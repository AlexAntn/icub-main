<?xml version="1.0" encoding="UTF-8" ?>
<!-- Left Arm Configuration file for motor side control, motor side position sensing, motor side velocity sensing and motor side torque sensing -->

<devices>
    <!-- Motor Control -->
    <device name="coman_mc_left_arm_wrapper" type="controlboardwrapper2">
    	<param name="threadrate">  10  </param>
    	<paramlist name="networks">
        	<!-- elem name hereafter are custom names that live only in this file, they are used in the attach phase -->
		<elem name="FirstSetOfJoints"> 0 3  3 6   </elem>
    	</paramlist>
	<param name="period"> 20                    </param>
    	<param name="name">   coman/left_arm        </param>
    	<param name="ports">  left_arm              </param>
    	<param name="joints"> 4                     </param>
    	<action phase="startup" level="5" type="attach">
    		<!-- The param value must match the device name in the coman.xml file -->
        	<paramlist name="networks">
            		<elem name="FirstSetOfJoints"> coman_mc </elem>  
        	</paramlist>
    	</action>
    	<action phase="shutdown" level="5" type="detach" />
    </device>

    <!-- Velocity Observer -->
    <device name="coman_VO_left_arm_wrapper" type="analogServer">
	<param name="period">     20                </param>
      	<param name="deviceId">   left_arm       </param>
	<param name="channels">   4       </param>
      	<paramlist name="ports">
    		<elem name="speeds">    0 3  0 3  </elem>
      	</paramlist>
      	<action phase="startup" level="5" type="attach">
        	<paramlist name="networks">
            		<!-- The param value must match the device name in the corresponding emsX file -->
          		<elem name="FirstSetOfJoints"> vo_left_arm </elem>
        	</paramlist>
      	</action>
      	<action phase="shutdown" level="5" type="detach" />
   </device>

   <!-- Joint Torque Observer -->
   <device name="coman_JT_left_arm_wrapper" type="analogServer">
	<param name="period">     20                </param>
      	<param name="deviceId">   left_arm       </param>
        <param name="channels">   4       </param>
      	<paramlist name="ports">
   		<elem name="torques">   3 6  0 3  </elem>
	</paramlist>
      	<action phase="startup" level="5" type="attach">
		<paramlist name="networks">
            		<!-- The param value must match the device name in the corresponding emsX file -->
          		<elem name="FirstSetOfJoints"> coman_jt </elem>
        	</paramlist>
      	</action>
      	<action phase="shutdown" level="5" type="detach" />
   </device>	
</devices>
