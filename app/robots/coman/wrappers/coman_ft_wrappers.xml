<?xml version="1.0" encoding="UTF-8" ?>

<devices>
    <device name="coman_ft_wrapper" type="analogServer">
      <param name="period">     1                </param>
      <param name="deviceId">   forceTorque             </param>     
      <param name="channels"> 24              </param>

      <paramlist name="ports">
           <elem name="right_leg">    0 5  0 5  </elem>
           <elem name="left_leg">     6 11 0 5  </elem>
           <elem name="right_arm">    12  17  0 5  </elem>
           <elem name="left_arm">   18 23 0 5  </elem>
      </paramlist>

      <action phase="startup" level="5" type="attach">
        <paramlist name="networks">            
          <elem name="FirstSetOfJoints"> coman_ft </elem>    <!-- The param value must match the device name in the corresponding emsX file -->
        </paramlist>
      </action>

      <action phase="shutdown" level="5" type="detach" />
   </device>
</devices>
