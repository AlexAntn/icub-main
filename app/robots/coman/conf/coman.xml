<?xml version="1.0" encoding="UTF-8" ?>
<robot name="coman">

  <device name="coman_mc" type="comanMotionControl">
    <params file="general.xml" />
    <params file="hardware/motionControl.xml" />
  </device>

  <device name="coman_ft" type="comanFTsensor">
    <params file="general.xml" />
    <params file="hardware/FTsensor.xml" />
  </device>


   <!-- wrappers  -->
  <devices file="wrappers/coman_mc_left_leg_wrapper.xml" /> 
  <devices file="wrappers/coman_mc_left_arm_wrapper.xml" />
  <devices file="wrappers/coman_mc_right_arm_wrapper.xml" /> 
  <devices file="wrappers/coman_mc_right_leg_wrapper.xml" /> 
  <devices file="wrappers/coman_mc_torso_wrapper.xml" /> 
  <devices file="wrappers/coman_mc_neck_wrapper.xml" />

   <devices file="wrappers/coman_ft_wrappers.xml" />

   <!-- inertial sensor -->
   <devices file="hardware/coman_inertial.xml" /> 

   <!-- read additional pos and vel -->
    <devices file="hardware/velocityObserver.xml" /> 
    <devices file="wrappers/coman_VO_wrappers.xml" /> 

   <!-- boadcast torque values -->
    <devices file="hardware/jointTorqueSensor.xml" /> 
    <devices file="wrappers/coman_JT_wrappers.xml" /> 
</robot>
