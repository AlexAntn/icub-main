<application>
<name>Joint Reaching Demo (IIT+ISR), Left Hand, Right Eye</name>

        <dependencies>
                <port>/icub/camcalib/right/out</port>
                <port>/icub/torso/state:o</port>
                <port>/icub/head/state:o</port>
                <port>/icub/left_arm/state:o</port>
        </dependencies>
      
        <module>
                <name>pf3dTracker</name>
                <parameters>--from /home/icub/iCub/main/app/pf3dTracker/conf/pf3dTracker_Right_Eye.ini</parameters>
                <node>icubbrain2</node>
                <tag>PF3DTracker_tracker</tag>
        </module>
   
        <module>
                <name>eye2RootFrameTransformer</name>
                <parameters>--name e2rBall --eye right</parameters>
                <node>icubbrain2</node>
                <tag>e2rBall</tag>
        </module>

        <module>
                <name>demoReachManager_IIT_ISR</name>
		<parameters>--from /home/icub/iCub/main/src/modules/demoReachManager_IIT_ISR/config.ini</parameters>
                <node>icubbrain2</node>
                <tag>manager</tag>
        </module>

        <module>
                <name>yarpview</name>
                <parameters>--name /PF3DTracker_viewer --x 320 --y 0</parameters>
                <node>chico3</node>
                <tag>PF3DTracker_viewer</tag>
        </module>
  
        <module>
                <name>iKinGazeCtrl</name>
                <node>icubbrain2</node>
                <tag>gazeCtrl</tag>
        </module>
  
        <module>
                <name>iKinArmCtrl</name>
                <parameters>--part left_arm --DOF9</parameters>                
                <node>icubbrain2</node>
                <tag>armCtrl</tag>
        </module>

        <connection>
                <from>/icub/camcalib/right/out</from>
                <to>/icub/PF3DTracker/videoIn</to>
                <protocol>udp</protocol>
        </connection>
        <connection>
                <from>/icub/head/state:o</from>
                <to>/e2rBall/head:i</to>
                <protocol>udp</protocol>
        </connection>
        <connection>
                <from>/icub/torso/state:o</from>
                <to>/e2rBall/torso:i</to>
                <protocol>udp</protocol>
        </connection>
        <connection>
                <from>/icub/PF3DTracker/dataOut</from>
                <to>/e2rBall/targetPos:i</to>
                <protocol>udp</protocol>
        </connection>
        <connection>
                <from>/icub/PF3DTracker/videoOut</from>
                <to>/PF3DTracker_viewer</to>
                <protocol>udp</protocol>
        </connection>

        <connection>
                <from>/e2rBall/targetPos:o</from>
                <to>/demoReachManager_IIT_ISR/trackTarget:i</to>
                <protocol>udp</protocol>
        </connection>
        <connection>
                <from>/demoReachManager_IIT_ISR/cmdHead:o</from>
                <to>/iKinGazeCtrl/head/xd:i</to>
                <protocol>udp</protocol>
        </connection>
        <connection>
                <from>/demoReachManager_IIT_ISR/cmdHand:o</from>
                <to>/iKinArmCtrl/left_arm/xd:i</to>
                <protocol>udp</protocol>
        </connection>

</application>
