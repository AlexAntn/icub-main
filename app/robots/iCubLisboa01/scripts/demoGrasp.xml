<!-- instantiation of
     $ICUB_ROOT/main/app/demoGrasp_IIT_ISR/scripts/demoGrasp.xml.template
     for iCubLisboa01 -->

<application>
<name>Joint Grasping Demo (IIT+ISR)</name>

        <dependencies>
                <port>/icub/camcalib/left/out</port>
                <port>/iKinGazeCtrl/head/rpc</port>
                <port>/icub/cartesianController/right_arm/state:o</port>
                <port>/icub/cartesianController/left_arm/state:o</port>
        </dependencies>
      
        <module>
                <name>pf3dTracker</name>
                <parameters>--from pf3dTracker.ini</parameters>
                <node>icubbrain1</node>
                <tag>PF3DTracker_tracker</tag>
        </module>
   
        <module>
                <name>demoGraspManager_IIT_ISR</name>
                <node>icubbrain2</node>
                <tag>manager</tag>
        </module>
  
        <module>
                <name>yarpview</name>
                <parameters>--name /PF3DTracker_viewer --x 320 --y 0 --RefreshTime 50</parameters>
                <node>chico3</node>
                <tag>PF3DTracker_viewer</tag>
        </module>
  
        <connection>
                <from>/icub/camcalib/left/out</from>
		<to>/pf3dTracker/video:i</to>
		<!-- <to>/icub/PF3DTracker_L/videoIn</to> -->
                <protocol>mcast</protocol>
        </connection>
        <connection>
                <from>/pf3dTracker/video:o</from>
                <!-- <from>/icub/PF3DTracker_L/videoOut</from> -->
                <to>/PF3DTracker_viewer</to>
                <protocol>udp</protocol>
        </connection>
        <connection>
		<from>/pf3dTracker/data:o</from>
                <!-- <from>/icub/PF3DTracker_L/dataOut</from> -->
                <to>/demoGraspManager_IIT_ISR/trackTarget:i</to>
                <protocol>udp</protocol>
        </connection>
        <connection>
                <from>/demoGraspManager_IIT_ISR/cmdFace:rpc</from>
                <to>/icub/face/emotions/in</to>
                <protocol>tcp</protocol>
        </connection>

</application>
