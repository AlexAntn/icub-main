<application>
<name>Camera Calibration, Left</name>

<dependencies>
   <port>/icub/cam/left</port>
</dependencies>

<module>
   <name>stereoCalib</name>
   <parameters>--context iCubLisboa01/conf --from chessboard_8x6_4.245cm.ini --STEREO_CALIBRATION_CONFIGURATION::MonoCalib 1</parameters>
   <stdio>chico3</stdio>
   <node>icubbrain2</node>
   <tag>calib</tag>
</module>
 
<module>
   <name>yarpview</name>
   <parameters>--name /left_image --x 0 --y 0 --synch</parameters>
   <node>chico3</node>
   <tag>left_image</tag>
</module>

<connection>
  <from>/icub/cam/left</from>
  <to>/stereoCalib/cam/left:i</to>
  <protocol>udp</protocol>
</connection>
 <connection>
  <from>/stereoCalib/cam/left:o</from>
  <to>/left_image</to>
  <protocol>udp</protocol> <!-- mcast+recv.bayer+method.nearest -->
</connection>

</application>
