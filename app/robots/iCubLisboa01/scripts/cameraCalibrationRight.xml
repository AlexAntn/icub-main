<application>
<name>Camera Calibration, Right</name>

<dependencies>
   <port>/icub/cam/right</port>
</dependencies>

<module>
   <name>stereoCalib</name>
   <parameters>--context iCubLisboa01/conf --from chessboard_8x6_4.245cm.ini --MonoCalib 1</parameters>
   <stdio>chico3</stdio>
   <node>icubbrain2</node>
   <tag>calib</tag>
</module>
 
<module>
   <name>yarpview</name>
   <parameters>--name /right_image --x 0 --y 0 --synch</parameters>
   <node>chico3</node>
   <tag>right_image</tag>
</module>

<connection>
  <from>/icub/cam/right</from>
  <to>/stereoCalib/right:i</to>
  <protocol>udp</protocol>
</connection>
<connection>
  <from>/stereoCalib/right:o</from>
  <to>/right_image</to>
  <protocol>udp</protocol>
</connection>

</application>
