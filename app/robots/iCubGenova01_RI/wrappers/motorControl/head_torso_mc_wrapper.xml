<?xml version="1.0" encoding="UTF-8" ?>
<devices>
  <device name="head_mc_wrapper" type="controlboardwrapper2">
      <param name="threadrate">  10  </param>
      <paramlist name="networks">
      <elem name="head_joints">  0 5 0 5 </elem>
      </paramlist>

      <param name="period"> 10        </param>
      <param name="name">   icub/head </param>
      <param name="ports">  head      </param>
      <param name="joints"> 6         </param>


      <action phase="startup" level="5" type="attach">
      <paramlist name="networks">
          <elem name="head_joints">  head_torso_mc </elem>
      </paramlist>
      </action>

      <action phase="shutdown" level="5" type="detach" />
  </device>
  
  <device name="torso_mc_wrapper" type="controlboardwrapper2">
      <param name="threadrate">  10  </param>
      <paramlist name="networks">
          <elem name="torso_joints">  0 2 6 8 </elem>
      </paramlist>

      <param name="period"> 10         </param>
      <param name="name">   icub/torso </param>
      <param name="ports">  torso      </param>
      <param name="joints"> 3          </param>


      <action phase="startup" level="5" type="attach">
      <paramlist name="networks">
          <elem name="torso_joints">  head_torso_mc </elem>
      </paramlist>
      </action>

      <action phase="shutdown" level="5" type="detach" />
  </device>
</devices>