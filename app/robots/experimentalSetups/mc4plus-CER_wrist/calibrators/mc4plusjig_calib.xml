<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE devices PUBLIC "-//YARP//DTD robotInterface 1.0//EN" "http://www.icub.org/DTD/robotInterfaceV1.0.dtd">

<devices robot="iCubExpSetupMC4PLUS_CER" build="1">
	<device name="mc4plusCER_calibrator" type="parametricCalibratorEth">
                <params file="general.xml" />
                
		<group name="GENERAL">
		    <param name="joints"> 1 </param> <!-- the number of joints of the robot part -->
		    <param name="deviceName"> MC4plusCER_Calibrator </param> <!-- forse non e' funzionale ma serve solo per debug -->
		</group>

        <group name="HOME">
		    <param name="positionHome">                       0             </param>
		    <param name="velocityHome">                       50            </param>
		</group>

		<group name="CALIBRATION">
		    <param name="calibrationType">                    8               </param>
		    <param name="calibration1">                       -2000           </param> <!-- used pwm  -->
		    <param name="calibration2">                       91022           </param> <!-- pos of reached hw limit in icubdeg-->
		    <param name="calibration3">                       0               </param> 

            <param name="calibrationZero">                    0.0             </param>
            <param name="calibrationDelta">                   0.0             </param>

		    <param name="startupPosition">                    0.0             </param> <!-- target position in deg after high level calib is terminated --> 
		    <param name="startupVelocity">                    50.0            </param> <!-- and its velocity in deg/sec -->
		    <param name="startupMaxPwm">                      3360            </param> <!-- max pwm used in calib (it is a pid param)-->
		    <param name="startupPosThreshold">                3               </param> <!-- tolerance of position in deg relative to positionZero param -->  
		</group>

	
		<param name="CALIB_ORDER"> (0) </param>	<!-- order of calibration-goto-zero in parallel. within () they can go in parallel -->

		<action phase="startup" level="10" type="calibrate">
		    <param name="target">devmc4plusCER_mc_wrapper</param>
		</action>

		<action phase="interrupt1" level="1" type="park">
		    <param name="target">devmc4plusCER_mc_wrapper</param>
		</action>

		<action phase="interrupt3" level="1" type="abort" />

	</device>
</devices>

