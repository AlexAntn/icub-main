<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE devices PUBLIC "-//YARP//DTD robotInterface 1.0//EN" "http://www.icub.org/DTD/robotInterfaceV1.0.dtd">

 <!-- Initialization file for EMS 9 - Right Lower Leg, 2 dof -->

<devices robot="iCubGenova04" build="1">
  <device name="right_lower_leg_mc" type="embObjMotionControl">
      <params file="general.xml" />
      <params file="hardware/electronics/right_lower_leg-ems9-eln.xml" />
      <params file="hardware/mechanicals/right_lower_leg-ems9-mec.xml" />

    <group name="LIMITS">
        <!--                                    0             1      -->
        <param name="Max">                      39            22        </param>
        <param name="Min">                     -20           -22        </param>
        <param name="Currents">                 5000          5000      </param>
    </group>

    <group name="IMPEDANCE">
      <param name="Imp0">	0.2	0.05	</param>
      <param name="Imp1">	0.2	0.05	</param>
    </group>

    <group name="PIDS">
        <!--                 Proportional  Derivative    Integral      Integral Limit      PWM Limit     scale factor   offset -->
        <param name="Pid0">     5            0            10             2500                  5000          11           0             </param>
        <param name="Pid1">     5            0            10             2500                  5000          11           0             </param>
    </group>

    <group name="TORQUE_PIDS">
        <param name="TPid0"> 	200             0             0            0          	5000          10            0 		</param>
        <param name="TPid1">	200             0             0            0          	5000          10            0 		</param>
    </group>

  </device>
</devices>
