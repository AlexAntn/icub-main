<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE devices PUBLIC "-//YARP//DTD robotInterface 1.0//EN" "http://www.icub.org/DTD/robotInterfaceV1.0.dtd">

 <!-- Initialization file for EMS 3 - Right Upper Arm, 4 dof -->

<devices robot="iCubGenova04" build="1">
  <device name="right_upper_arm_mc" type="embObjMotionControl">
      <params file="general.xml" />
      <params file="hardware/electronics/right_upper_arm-ems3-eln.xml" />
      <params file="hardware/mechanicals/right_upper_arm-ems3-mec.xml" />

    <group name="LIMITS">
        <!--                      0             1               2            3      -->
        <param name="Max">        10            160.8         80            106         </param>
        <param name="Min">        -95.5         0             -37           15          </param>
        <param name="Currents">   5000          5000          5000          5000        </param>
    </group>

    <group name="IMPEDANCE">
      <param name="stiffness">	0.1   0.1   0.1 0.1   </param>
      <param name="damping">	0.05 0.05 0.05 0.05   </param>
    </group>

    <group name="PIDS">
        <!--                 Proportional  Derivative     Integral   Integral Limit      PWM Limit     scale factor   offset 	-->
        <param name="Pid0">   5             0               10             2500            10000             11          0          </param>
        <param name="Pid1">   5             0               10             2500            10000             11          0          </param>
        <param name="Pid2">   5             0               10             2500            10000             11          0          </param>
        <param name="Pid3">   5             0               10             2500            10000             11          0          </param>
    </group>


    <group name="TORQUE_PIDS">
        <param name="TPid0">  200  	       0   	    	    0	         0    		  10000    	   10  	       0          </param>
        <param name="TPid1">  200  	       0	            0		     0    		  10000    	   10  	       0 	  </param>
        <param name="TPid2">  200 	       0   		        0   		 0    		  10000    	   10  	       0 	  </param>
        <param name="TPid3">  500          0   		        0   		 0    		  10000    	   10  	       0 	  </param>
    </group>

  </device>
</devices>
