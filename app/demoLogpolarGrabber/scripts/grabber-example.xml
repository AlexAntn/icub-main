<application>
<name>Test logpolar grabber and reconstruct</name>
<dependencies>
      <port>/icub01</port>
</dependencies>
   <module>
      <name>icubmoddev</name>
	      <parameters>--device logpolargrabber --width 320 --height 240 --framerate 20 --subdevice dragonfly2 --video_type 3 --white_balance 0.506 0.494 --gain 0.312 --shutter 0.913 --name /grabber --brightness 0 --DR2 --stamp --d 0 --sharpness 0.5 --hue 0.48 --gamma 0.4 --saturation 0.271</parameters>
      <!-- static_grabber filename C:\Users\pasa\Repository\_cvs\iCub\src\modules\staticgrabber\test.ppm -->
      <node>pc104-icub01</node>
	  <stdio>icub12</stdio>
	  <tag>logpolar-grabber</tag>
   </module>
   <module>
      <name>yarpview</name>
      <parameters>--name /view1 --x 0 --y 50 --synch</parameters>
      <node>icub12</node>
	  <tag>view1</tag>
   </module>
   <module>
      <name>yarpview</name>
      <parameters>--name /view2 --x 320 --y 50 --synch</parameters>
      <node>icub12</node>
      <tag>view2</tag>
   </module>
   <module>
      <name>yarpview</name>
      <parameters>--name /view3 --x 640 --y 50 --synch</parameters>
      <node>icub12</node>
      <tag>view3</tag>
   </module>
   <module>
      <name>logpolarRemapper</name>
      <parameters>--name remapper --remote /grabber --width 480</parameters>
      <node>icub12</node>
      <stdio>icub12</stdio>
      <tag>remapper</tag>
   </module>
   <module>
      <name>yarpview</name>
      <parameters>--name /view4 --x 960 --y 50 --synch</parameters>
      <node>icub12</node>
      <tag>view4</tag>
   </module>
<connection>
  <output>/grabber</output>
  <input>/view1</input>
  <protocol>mcast</protocol>
</connection>
<connection>
  <output>/grabber/logpolar</output>
  <input>/view2</input>
  <protocol>mcast</protocol>
</connection>
<connection>
  <output>/grabber/fovea</output>
  <input>/view3</input>
  <protocol>mcast</protocol>
</connection>
<connection>
  <output>/remapper:out</output>
  <input>/view4</input>
  <protocol>udp</protocol>
</connection>
</application>
