<application>
   <name>Grasping Demo Right</name>
   <dependencies>
   </dependencies>

   <module>
      <name>skinDriftCompensation</name>
      <parameters>--from SkinDriftCompensationRight.ini --context graspingDemo/conf</parameters>
	    <node>icub15</node>
      <stdio>icub15</stdio>
	    <tag>drifComp</tag>
   </module>

  <module>
    <name>iCubSkinGui</name>
    <parameters>--from righthand.ini --useCalibration</parameters>
    <node>icub15</node>
    <tag>skinGui</tag>
  </module>  

  <module>
    <name>tactileGrasp</name>
    <parameters>--from OpenHandRight.ini --context graspingDemo/conf</parameters>
	  <node>icub15</node>
    <stdio>icub15</stdio>
    <tag>openHand</tag>
  </module>

  <module>
    <name>tactileGrasp</name>
    <parameters>--from CalibrateRight.ini --context graspingDemo/conf</parameters>
    <node>icub15</node>
    <stdio>icub15</stdio>
    <tag>calibrate</tag>
  </module>

  <module>
    <name>tactileGrasp</name>
    <parameters>--from ToughGraspRight.ini --context graspingDemo/conf</parameters>
	  <node>icub15</node>
    <stdio>icub15</stdio>
    <tag>toughGrasp</tag>
  </module>

  <module>
    <name>tactileGrasp</name>
    <parameters>--from SoftGraspRight.ini --context graspingDemo/conf</parameters>
    <node>icub15</node>
    <stdio>icub15</stdio>
    <tag>softGrasp</tag>
  </module>

  <module>
    <name>tactileGrasp</name>
    <parameters>--from CompliantGraspRight.ini --context graspingDemo/conf</parameters>
	  <node>icub15</node>
    <stdio>icub15</stdio>
    <tag>compliantGrasp</tag>
  </module>
   
    
  <!--Connections between SkinDriftCompensation module and the SkinGui-->
  <connection>
    <from>/icub/skin/righthandcomp</from>
    <to>/skinGui/right_hand:i</to>
    <protocol>tcp</protocol>
  </connection>

</application>

