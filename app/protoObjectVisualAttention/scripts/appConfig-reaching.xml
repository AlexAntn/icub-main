<application>
	<name>protoObjectReaching</name>
 	<dependencies>
		<port>/icubSim/head/rpc:i</port> 
		<port>/icubSim/cam/right</port>
		<port>/rea/Watershed/outBlobs:o</port>
	</dependencies>	
	<module>
		<name>openCVLogPolar</name>
		<parameters>--name /cvLogPolarR --mode INVERSE </parameters>
		<tag>logPolarReverse</tag>
		<node>/lightHouse</node>
	</module>
	<module>
		<name>yarpview</name>
		<parameters>--name /reverseView --x 600 --y 600 --synch</parameters>
		<tag>rView</tag>
		<node>/lightHouse</node>
	</module>
	<connection>
      	<from>/rea/Watershed/outBlobs:o</from>
			<to>/cvLogPolarR/image:i</to>
	</connection>
	<connection>
      	<from>/cvLogPolarR/image:o</from>
			<to>/reverseView</to>
	</connection>
</application>
