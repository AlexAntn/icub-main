<application>
	<name>protoObjectVisualAttention</name>
 <dependencies>
		<port>/icubSim/head/rpc:i</port> 
		<port>/icubSim/cam/right</port>
	</dependencies>
	<module>
		<name>openCVLogPolar</name>
		<parameters>--name /cvLogPolarF  --mode FORWARD</parameters>
		<tag>logPolarForward</tag>
		<node>/lightHouse</node>
	</module>
	<module>
		<name>colourProcessor</name>
		<parameters>--file colourProcessor.ini</parameters>
		<tag>colourPU</tag>
		<node>/surfer</node>
	</module>
	<module>
		<name>imageProcessor</name>
		<parameters>--file imageProcessor.ini</parameters>
		<tag>imagePU</tag>
		<node>/lightHouse</node>
	</module>
	<module>
		<name>imageProcessorInterface</name>
		<parameters></parameters>
		<tag>imagePUInterface</tag>
		<node>/surfer</node>
	</module>
	<module>
		<name>saliencyBlobFinder</name>
		<parameters>--file saliencyBlobFinder.ini</parameters>
		<tag>salinecyBlobFinder</tag>
		<node>/surfer</node>
	</module>
	<module>
		<name>yarpview</name>
		<parameters>--name /rgView --x 200 --y 600 --synch</parameters>
		<tag>rgview</tag>
		<node>/lightHouse</node>
	</module>
	<module>
		<name>yarpview</name>
		<parameters>--name /grView --x 500 --y 600 --synch</parameters>
		<tag>grview</tag>
		<node>/lightHouse</node>
	</module>
	<module>
		<name>yarpview</name>
		<parameters>--name /byView --x 200 --y 400 --synch</parameters>
		<tag>byview</tag>
		<node>/lightHouse</node>
	</module>
 	<module>
		<name>yarpview</name>
		<parameters>--name /edgesView --x 500 --y 400 --synch</parameters>
		<tag>edgesview</tag>
		<node>/lightHouse</node>
	</module>
	<module>
		<name>yarpview</name>
		<parameters>--name /logPolarForwardView --x 800 --y 400 --synch</parameters>
		<tag>logpolarforward</tag>
		<node>/lightHouse</node>
	</module>
 
	<connection>
      	<output>/icubSim/cam/right</output>
			<input>/cvLogPolarF/image:i</input>
	</connection>
	<connection>
      	<output>/cvLogPolarF/image:o</output>
			<input>/logPolarForwardView</input>
	</connection>
	<connection>
      	<from>/cvLogPolarF/image:o</from>
			<to>/colourPU/image:i</to>
	</connection>
	<connection>
      	<from>/colourPU/rg:o</from>
			<to>/imagePU/rg:i</to>
	</connection>
	<connection>
      	<from>/colourPU/gr:o</from>
			<to>/imagePU/gr:i</to>
	</connection>
	<connection>
      	<from>/colourPU/by:o</from>
			<to>/imagePU/by:i</to>
	</connection>
	<connection>
      	<from>/colourPU/rg:o</from>
			<to>/rgView</to>
	</connection>
	<connection>
      	<from>/colourPU/gr:o</from>
			<to>/grView</to>
	</connection>
	<connection>
      	<from>/colourPU/by:o</from>
			<to>/byView</to>
	</connection>

	<connection>
      	<from>/imagePU/edges:o</from>
			<to>/edgesView</to>
	</connection>

</application>
