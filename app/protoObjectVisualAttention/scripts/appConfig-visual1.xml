<application>
	<name>protoObjectVisualAttention</name>
 <dependencies>
		<port>/icubSim/head/rpc:i</port> 
		<port>/icubSim/cam/right</port>
	</dependencies>
	<module>
		<name>camCalib</name>
		<parameters>--name /icubSim/camcalib/right  --from icubEyes.ini --group CAMERA_CALIBRATION_RIGHT</parameters>
		<tag>camcalib</tag>
		<node>/lightHouse</node>
	</module>
	<module>
		<name>openCVLogPolar</name>
		<parameters>--name /cvLogPolarF  --mode FORWARD</parameters>
		<tag>logPolarForward</tag>
		<node>/surfer</node>
	</module>
	<module>
		<name>openCVLogPolar</name>
		<parameters>--name /cvLogPolarR --mode REVERSE </parameters>
		<tag>logPolarReverse</tag>
		<node>/surfer</node>
	</module>
	<module>
		<name>visualAttentionB09</name>
		<parameters></parameters>
		<tag>imageProcessor</tag>
		<node>/lightHouse</node>
	</module>
	<module>
		<name>watershedModule</name>
		<parameters></parameters>
		<tag>watershed</tag>
		<node>/lightHouse</node>
	</module>
	<module>
		<name>contextualRefinement</name>
		<parameters>--configfile multiclass.cfg </parameters>
		<tag>cRefinement</tag>
		<node>/surfer</node>
	</module>
	<module>
		<name>yarpview</name>
		<parameters>--name /logPolarForwardView --x 100 --y 600 --synch</parameters>
		<tag>viewer</tag>
		<node>/lightHouse</node>
	</module>
	<module>
		<name>yarpview</name>
		<parameters>--name /blobView --x 600 --y 600 --synch</parameters>
		<tag>blobViewer</tag>
		<node>/lightHouse</node>
	</module>
 
 <connection>
      	<output>/icubSim/cam/right</output>
			<input>/icubSim/camcalib/right/in</input>
	</connection>
	<connection>
      	<output>/icubSim/cam/right</output>
			<input>/cvLogPolarF/in</input>
	</connection>
	<connection>
      	<output>/cvLogPolarF/out</output>
			<input>/logPolarForwardView</input>
	</connection>
	<connection>
      	<from>/cvLogPolarF/out</from>
			<to>/rea/ImageProcessor/in</to>
	</connection>
	<connection>
      	<from>/rea/ImageProcessor/out</from>
			<to>/rea/Watershed/in</to>
	</connection>
	<connection>
      	<from>/rea/ImageProcessor/outRed</from>
			<to>/rea/Watershed/inRed</to>
	</connection>
	<connection>
      	<from>/rea/ImageProcessor/outGreen</from>
			<to>/rea/Watershed/inGreen</to>
	</connection>
	<connection>
      	<from>/rea/ImageProcessor/outBlue</from>
			<to>/rea/Watershed/inBlue</to>
	</connection>
	<connection>
      	<from>/rea/ImageProcessor/outRG</from>
			<to>/rea/Watershed/inRG</to>
	</connection>
	<connection>
      	<from>/rea/ImageProcessor/outGR</from>
			<to>/rea/Watershed/inGR</to>
	</connection>
	<connection>
      	<from>/rea/ImageProcessor/outBY</from>
			<to>/rea/Watershed/inBY</to>
	</connection>
	<connection>
      	<from>/rea/Watershed/outBlobs</from>
			<to>/blobView</to>
	</connection>
</application>
