<application>
<name>logpolar grabber and reconstruct</name>
<dependencies>
 	
	<port>/pc104</port>
</dependencies>
   <module>
      <name>icubmoddev</name>
	      
	      <parameters>--device logpolargrabber --subdevice dragonfly2 --width 320 --height 240 --DR2  --d 0  --white_balance 0.506 0.494 --gain 0.312 --shutter 0.913 --brightness 0 --framerate 30 --name /icub/cam/left     </parameters>
     	<node>pc104</node>
          <stdio>icub15</stdio>
	  <tag>logpolar-grabber-left</tag>
   </module>
	<module>
      <name>icubmoddev</name>
	      <parameters>--device logpolargrabber --subdevice dragonfly2 --width 320 --height 240 --DR2  --d 1  --white_balance 0.506 0.494 --gain 0.312 --shutter 0.913 --brightness 0 --framerate 30 --name /icub/cam/right   </parameters>
	     <node>pc104</node>
	  <stdio>icub15</stdio>
	  <tag>logpolar-grabber-right</tag>
   </module>
   <module>
      <name>yarpview</name>
      <parameters>--name /leftview --x 0 --y 50 --synch</parameters>
      <node>icub15</node>
	  <tag>leftview</tag>
   </module>
   <module>
      <name>yarpview</name>
      <parameters>--name /rightview --x 320 --y 50 --synch</parameters>
      <node>icub15</node>
      <tag>rightview</tag>
   </module>
   
   <module>
      <name>logpolarRemapper</name>
      <parameters>--name remapper/left --remote /icub/cam/left --width 480</parameters>
      <node>pc104</node>
      <stdio>icub15</stdio>
      <tag>remapperLeft</tag>
	</module>
	</module>
      <name>yarpview</name>
      <parameters>--name /viewremapper --x 640 --y 50 --synch</parameters>
      <node>icub15</node>
      <tag>viewremapper</tag>
   </module>
   <module>
      <name>logpolarRemapper</name>
      <parameters>--name remapper/right --remote /icub/cam/right --width 480</parameters>
      <node>pc104</node>
      <stdio>icub15</stdio>
      <tag>remapperRight</tag>
      <stdio>icub15</stdio>
      <tag>remapper</tag>
   </module>
   <module>
      <name>yarpview</name>
      <parameters>--name /viewremapperRight --x 960 --y 50 --synch</parameters>
      <node>icub15</node>
      <tag>viewremapperRight</tag>
      <parameters>--name /view4 --x 960 --y 50 --synch</parameters>
      <node>icub15</node>
      <tag>view4</tag>
   </module>
	<module>
      <name>yarpview</name>
      <parameters>--name /viewremapperLeft --x 640 --y 50 --synch</parameters>
      <node>icub15</node>
      <tag>viewremapperLeft</tag>
   </module>
   <module>
      <name>yarpview</name>
      <parameters>--name /viewFoveaRight --x 0 --y 150 --synch</parameters>
      <node>icub15</node>
      <tag>viewfoveaRight</tag>
   </module>
	<module>
      <name>yarpview</name>
      <parameters>--name /viewFoveaLeft --x 320 --y 150 --synch</parameters>
      <node>icub15</node>
      <tag>viewfoveaLeft</tag>
   </module>
<connection>
  <output>/icub/cam/left/logpolar</output>
  <input>/leftview</input>
  <protocol>mcast</protocol>
</connection>
<connection>
  <output>/icub/cam/right/logpolar</output>
  <input>/rightview</input>
  <protocol>mcast</protocol>
</connection>
<connection>
  <output>/icub/cam/right</output>
  <input>/viewremapper</input>
  <protocol>mcast</protocol>
</connection>
<connection>
  <output>/remapper/left:out</output>
  <input>/viewremapperLeft</input>
  <protocol>mcast</protocol>
</connection>
<connection>
  <output>/remapper/right:out</output>
  <input>/viewremapperRight</input>
  <protocol>mcast</protocol>
</connection>
<connection>
  <output>/icub/cam/left/fovea</output>
  <input>/viewFoveaLeft</input>
  <protocol>mcast</protocol>
</connection>
<connection>
  <output>/icub/cam/right/fovea</output>
  <input>/viewFoveaRight</input>
  <protocol>mcast</protocol>
</connection>
</application>

