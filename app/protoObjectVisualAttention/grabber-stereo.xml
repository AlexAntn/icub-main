<application>
<name>logpolar grabber and reconstruct</name>
<dependencies>
 	
	<port>/pc104</port>
</dependencies>
   <module>
      <name>icubmoddev</name>
	      <parameters>--device logpolargrabber --subdevice dragonfly2 --width 320 --height 240  --white_balance 0.506 0.494 --gain 0.312 --shutter 0.913 --name /icub/cam/left  --brightness 0 --DR2  --d 0 --framerate 30 </parameters>
     <node>pc104</node>
          <stdio>icub14</stdio>
	  <tag>logpolar-grabber-left</tag>
   </module>
	<module>
      <name>icubmoddev</name>
	      <parameters>--device logpolargrabber --subdevice dragonfly2 --width 320 --height 240  --white_balance 0.506 0.494 --gain 0.312 --shutter 0.913 --name /icub/cam/right  --brightness 0 --DR2  --d 1 --framerate 30 </parameters>
     <node>pc104</node>
	  <stdio>icub14</stdio>
	  <tag>logpolar-grabber-right</tag>
   </module>
   <module>
      <name>yarpview</name>
      <parameters>--name /leftview --x 0 --y 50 --synch</parameters>
      <node>icub14</node>
	  <tag>leftview</tag>
   </module>
   <module>
      <name>yarpview</name>
      <parameters>--name /rightview --x 320 --y 50 --synch</parameters>
      <node>icub14</node>
      <tag>rightview</tag>
   </module>
   
   <module>
      <name>logpolarRemapper</name>
      <parameters>--name remapper/left --remote /icub/cam/left --width 480</parameters>
      <node>pc104</node>
      <stdio>icub14</stdio>
      <tag>remapperLeft</tag>
   </module>
<module>
      <name>logpolarRemapper</name>
      <parameters>--name remapper/right --remote /icub/cam/right --width 480</parameters>
      <node>pc104</node>
      <stdio>icub14</stdio>
      <tag>remapperRight</tag>
   </module>
   <module>
      <name>yarpview</name>
      <parameters>--name /viewremapperRight --x 960 --y 50 --synch</parameters>
      <node>icub14</node>
      <tag>viewremapperRight</tag>
   </module>
	<module>
      <name>yarpview</name>
      <parameters>--name /viewremapperLeft --x 640 --y 50 --synch</parameters>
      <node>icub14</node>
      <tag>viewremapperLeft</tag>
   </module>
<connection>
  <output>/icub/cam/left/logpolar</output>
  <input>/leftview</input>
  <protocol>mcast</protocol>
</connection>
<connection>
  <output>/icub/cam/right/logpolar</output>
  <input>/rightview</input>
  <protocol>mcast</protocol>
</connection>
<!--connection>
  <output>/icub/cam/right</output>
  <input>/viewremapper</input>
  <protocol>mcast</protocol>
</connection-->
<connection>
  <output>/remapper/left:out</output>
  <input>/viewremapperLeft</input>
  <protocol>mcast</protocol>
</connection>
<connection>
  <output>/remapper/right:out</output>
  <input>/viewremapperRight</input>
  <protocol>mcast</protocol>
</connection>
</application>
