<application>
<name>Joint Reaching Demo (IIT+ISR) Right Hand</name>

        <dependencies>
                <port>/icub/camcalib/left/out</port>
                <port>/icub/torso/state:o</port>
                <port>/icub/head/state:o</port>
                <port>/icub/right_arm/state:o</port>
        </dependencies>
      
        <module>
                <name>pf3dTracker</name>
                <node>cortex1</node>
                <tag>PF3DTracker_tracker</tag>
        </module>
   
        <module>
                <name>leftEyeToRoot</name>
                <parameters>--inputHeadPort /l2rBall/headIn --inputTorsoPort /l2rBall/torsoIn --inputBallPositionPort /l2rBall/posIn --outputBallPositionPort /l2rBall/posOut</parameters>
                <node>cortex1</node>
                <tag>l2rBall</tag>
        </module>

        <module>
                <name>demoReachManager_IIT_ISR</name>
                <parameters>--part right_arm</parameters>
                <node>cortex1</node>
                <tag>manager</tag>
        </module>

        <module>
                <name>yarpview</name>
                <parameters>--name /PF3DTracker_viewer --x 320 --y 0</parameters>
                <node>chico3</node>
                <tag>PF3DTracker_viewer</tag>
        </module>
  
        <module>
                <name>iKinGazeCtrl</name>
                <node>cortex2</node>
                <tag>gazeCtrl</tag>
        </module>
  
        <module>
                <name>iKinArmCtrl</name>
                <parameters>--part right_arm</parameters>                
                <node>cortex3</node>
                <stdio>chico3</stdio>
                <tag>armCtrl</tag>
        </module>

        <module>
                <name>dataDumper</name>
                <parameters>--name /log/cmdHead --rxTime</parameters>
                <node>chico3</node>
                <stdio>chico3</stdio>
                <tag>logCmdHead</tag> 
        </module> 

        <module>
                <name>dataDumper</name>
                <parameters>--name /log/cmdHand --rxTime</parameters>
                <node>chico3</node>
                <stdio>chico3</stdio>
                <tag>logCmdHand</tag> 
        </module> 

        <module>
                <name>dataDumper</name>
                <parameters>--name /log/handVel --rxTime</parameters>
                <node>chico3</node>
                <stdio>chico3</stdio>
                <tag>logHandVel</tag>
        </module> 

        <module>
                <name>dataDumper</name>
                <parameters>--name /log/handPos --rxTime</parameters>
                <node>chico3</node>
                <stdio>chico3</stdio>
                <tag>logHandPos</tag>
        </module> 

        <connection>
                <from>/icub/camcalib/left/out</from>
                <to>/icub/PF3DTracker/videoIn</to>
        </connection>
        <connection>
                <from>/icub/head/state:o</from>
                <to>/l2rBall/headIn</to>
        </connection>
        <connection>
                <from>/icub/torso/state:o</from>
                <to>/l2rBall/torsoIn</to>
        </connection>
        <connection>
                <from>/icub/PF3DTracker/dataOut</from>
                <to>/l2rBall/posIn</to>
        </connection>
        <connection>
                <from>/icub/PF3DTracker/videoOut</from>
                <to>/PF3DTracker_viewer</to>
        </connection>

        <connection>
                <from>/l2rBall/posOut</from>
                <to>/demoReachManager_IIT_ISR/trackTarget:i</to>
        </connection>
        <connection>
                <from>/demoReachManager_IIT_ISR/cmdHead:o</from>
                <to>/iKinGazeCtrl/head/xd:i</to>
        </connection>
        <connection>
                <from>/demoReachManager_IIT_ISR/cmdHand:o</from>
                <to>/iKinArmCtrl/right_arm/xd:i</to>
        </connection>

        <connection>
                <from>/demoReachManager_IIT_ISR/cmdHead:o</from>
                <to>/log/cmdHead</to>
        </connection>

        <connection>
                <from>/demoReachManager_IIT_ISR/cmdHand:o</from>
                <to>/log/cmdHand</to> 
        </connection> 

        <connection>
                <from>/iKinArmCtrl/right_arm/v:o</from>
                <to>/log/handVel</to>
        </connection>

        <connection>
                <from>/icub/right_arm/state:o</from>
                <to>/log/handPos</to> 
        </connection> 

</application>
