<application>
    <name>LasaImitation</name>
    <dependencies>
        <port>/root</port>
    </dependencies> 
    <module>
        <name>ImitationApplicationModule</name>
        <parameters>--period 0.5</parameters>
        <node>lasapc18</node>
        <stdio>lasapc18</stdio>
        <tag>IA</tag>
    </module>
    <module>
        <name>VelocityControllerExt</name>
        <parameters>--name VelocityController --robot icub --period 0.02 --decouple --part right_arm+left_arm+torso+head </parameters>
        <node>pc104</node>
        <stdio>lasapcicub</stdio>
        <tag>VC</tag>
    </module>
    <module>
        <name>RobotControllerModule</name>
        <parameters>--period 0.04 </parameters>
        <tag>RC</tag>
        <stdio>lasapcicub</stdio>
        <node>lasapcicub</node>
    </module>
    <module>
        <name>TouchControllerModule</name>
        <parameters>--name 3DMouse --period 0.1 --type 3Dmouse --device 3Dconnexion --load</parameters>
        <tag>TC1</tag>
        <stdio>lasapcicub</stdio>
        <node>lasapcicub</node>
   </module>
    <module>
        <name>TouchControllerModule</name>
        <parameters>--name Touchpad --period 0.1 --type touchpad --device Cirque --load</parameters>
        <tag>TC2</tag>
        <stdio>lasapcicub</stdio>
        <node>lasapcicub</node>
        <workdir>/home/icub/asd</workdir>
   </module>
    <module>
        <name>GaussianMixtureModelModule</name>
        <parameters>--name asd --period 0.1</parameters>
        <node>lasapcicub</node>
        <stdio>lasapcicub</stdio>
        <tag>GMM</tag>
        <workdir>/home/icub/asd</workdir>
    </module>
    <module>
        <name>DataStreamerModule</name>
        <parameters>--name asd --period 0.05</parameters>
        <node>lasapcicub</node>
        <stdio>lasapcicub</stdio>
        <tag>DS</tag>
        <workdir>/home/icub/asd</workdir>
    </module>
    <connection protocol="tcp">
        <from>/VelocityController/position</from>
        <to>/RobotController/currentJointPosition</to>
    </connection>
    <connection protocol="tcp">
        <from>/VelocityController/velocity</from>
        <to>/RobotController/currentJointVelocity</to>
     </connection>
    <connection protocol="tcp">
        <from>/RobotController/targetJointPosition</from>
        <to>/VelocityController/targetPosition</to>
    </connection>
    <connection protocol="tcp">
        <from>/RobotController/targetJointVelocity</from>
        <to>/VelocityController/targetVelocity</to>
    </connection>
    <connection protocol="tcp">
        <from>/GaussianMixtureModel/asd/dataStreamRpc</from>
        <to>/DataStreamer/asd/rpc</to>
    </connection>
    <connection protocol="tcp">
        <from>/GaussianMixtureModel/asd/dataStreamOutput</from>
        <to>/DataStreamer/asd/input</to>
     </connection>
    <connection protocol="tcp">
        <from>/RobotController/currentCartPositionR</from>
        <to>/GaussianMixtureModel/asd/input</to>
    </connection>
</application>

